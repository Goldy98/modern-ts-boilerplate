{
  "name": "modern-ts-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate typescript project using express & jest",
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf dist && tsc",
    "dev": "tsc-watch --onSuccess 'npm run start:dev'",
    "start": "node dist/index.js",
    "start:dev": "rimraf dist && tsc && node dist/index.js",
    "test": "jest",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "prettier": "npx prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Goldy98/modern-ts-boilerplate.git"
  },
  "keywords": [
    "API",
    "Typescript",
    "Test",
    "Jest"
  ],
  "author": "SAGBO Aim√©",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Goldy98/modern-ts-boilerplate/issues"
  },
  "homepage": "https://github.com/Goldy98/modern-ts-boilerplate#readme",
  "dependencies": {
    "@babel/preset-typescript": "^7.21.4",
    "@jest/globals": "^29.5.0",
    "@rushstack/eslint-patch": "^1.2.0",
    "@types/express": "^4.17.17",
    "eslint-plugin-promise": "^6.1.1",
    "express": "^4.18.2",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "tsc-watch": "^6.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.38.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.7",
    "typescript": "^5.0.4"
  }
}
